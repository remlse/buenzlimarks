layout {
	default_tab_template {
		pane size=1 borderless=true {
			plugin location="zellij:compact-bar"
		}
		pane
		pane size=2 borderless=true {
			plugin location="zellij:status-bar"
		}
	}
	tab_template name="compact_tab" {
		pane size=1 borderless=true {
			plugin location="zellij:compact-bar"
		}
		children
	}

	compact_tab name="btop" {
		pane command="btop" borderless=true
	}
	compact_tab name="docs" {
		pane name="book" {
			command "just"
			args "book-watch"
		}
		pane name="diagrams" {
			command "just"
			args "diagrams-watch"
		}
	}
	compact_tab name="dashboard" focus=true {
		pane name="app" {
			command "just"
			args "app-watch"
		}
		pane name="server" {
			command "just"
			args "watch"
		}
		pane name="db-reset" {
			command "just"
			args "db-reset"
			size "10%"
		}
	}
	compact_tab name="terminal"
}
